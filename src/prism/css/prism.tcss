Screen {
  background: $surface-darken-1;
}

Header {
  dock: top;
}

Header .header--title {
  color: $text;
  text-style: bold;
}

HeaderIcon {
  display: none;
}

#file-list{
  dock: left;
  width: 20%;
  height: 100%;
  background: $primary-background-darken-1;
  content-align: right middle;
}

/* File list width states */
.-files-narrow #file-list {
  width: 20%;
}

.-files-wide #file-list {
  width: 80%;
}

.-files-hidden #file-list {
  width: 0%;
}

FileListItem {
  height: auto;
  padding: 0 1;
}

FileListItem.odd {
  background: $primary-background-darken-2;
}

FileListItem.even {
  background: $primary-background-darken-1;
}

FileListItem.selected {
  background: $primary-darken-3;
}

FileListItem:hover {
  background: $primary-background-lighten-1;
}
